<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th>Summary</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td style="width:20rem"><%= post.title %></td>

        <td style="width:10rem"><%= link_to "#{post.url.truncate(20)}", post.url, target: "_blank"%></td>
        <td style="width:17rem"><%= post.summary.truncate(30) %></td>
        <td><%= post.body.truncate(65) %></td>
        <td><%= link_to 'Show', post, class: 'btn btn-dark' %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: 'btn btn-secondary' %></td>
        <td><%= link_to 'Destroy', post, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: "btn btn-success mb-4" %>
