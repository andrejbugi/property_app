<h1 class="h3">Properties</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Price</th>
      <th>Rooms</th>
      <th>Bathrooms</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.name %></td>
        <td><%= property.address %></td>
        <td><%= property.price %></td>
        <td><%= property.rooms %></td>
        <td><%= property.bathrooms %></td>
        <td><%= link_to 'Show', property, class: 'btn btn-dark' %></td>
        <% if equal_with_current_account?(property) %>
          <td><%= link_to 'Edit', edit_property_path(property), class: 'btn btn-secondary' %></td>
          <td><%= link_to 'Delete', property, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td><a class="btn btn-secondary disabled">Edit</a></td>
          <td><a class="btn btn-danger disabled">Delete</a></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Property', new_property_path, class: "btn btn-success mb-4" %>
