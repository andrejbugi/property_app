<div class="property-main-photo" style="background-image:url('<%= property_photo_url @property %>')">
  <div class="photo-overlay">
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <div class="col-lg-6">
          <p class="mb-0"><%= @property.address %></p>
          <p class="h2 mb-3"><%= @property.price > 0 ? number_to_currency(@property.price, unit: 'â‚¬', precision: 0) : "For Sale" %></p>
        </div>
        <div class="col-lg-6 text-center">
          <div class="row mr-lg-3 mt-sm-3 bg-light p-3">
            <div class="col-4">
              <p class="m-0"><strong>Rooms</strong></p>
              <i class="fas fa-bed"></i>
              <span class="lead"><%= @property.rooms %></span>
            </div>
            <div class="col-4">
              <p class="m-0"><strong>Bathrooms</strong></p>
              <i class="fas fa-bath"></i>
              <span class="lead"><%= @property.bathrooms %></span>
            </div>
            <div class="col-4">
              <p class="m-0"><strong>Parking</strong></p>
              <i class="fas fa-car"></i>
              <span class="lead"><%= @property.parking_spaces %></span>
            </div>
          </div>
        </div>
      </div>

      <div class="row border-top border-bottom mt-5 mb-4 pt-3 pb-3">
        <div class="col-6">
          <strong><%= link_to "Est. Monthly Repayments of #{ number_to_currency(((@property.price - (@property.price * 0.1)) / 360), precision: 0) } *", "#", class: "text-success" %></strong>
        </div>
        <div class="col-6 text-right">
          <strong><%= link_to "Can I Afford This Property?", "#", class: "text-success" %></strong>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <p class="h3"><%= @property.name %></p>
          <p class="h5">Property Description</p>

          <div id="prop-details">
            <%= simple_format @property.details %>
          </div>

          <button class="btn btn-outline-info mt-5" id="toggleDetails">Show More</button>

          <p class="mt-5">* This rate is based on a 30 year mortgage, after paying an initial 10% down payment. Shorter term mortgages require higher monthly repayment.
        </div>
      </div>
    </div>

    <div class='col-md-4'>
      <%= render "properties/agent_details" %>
    </div>
  </div>
</div>

<section class="mt-5 mb-5">
  <div class="container">
    <div class="row">
      <%= render 'properties/list', properties: @agent_properties %>
    </div>
  </div>
</section>
